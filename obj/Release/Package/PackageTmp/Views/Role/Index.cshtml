﻿@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <h2>Available Roles for Application</h2>
    <section class="col-sm-6">
        <table class="table-bordered">
            @Html.ActionLink("Create Role", "Create", "Role")
        </table>
    </section>
    <section class="col-sm-6">
        <table class="table-bordered">
            @Html.ActionLink("Assign Role to User", "RegisterRole", "Account")
        </table>
    </section>
    <br />
    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" style="font-size:16px" cellspacing="0" width="100">
        <tr>
            <th class="c">
                Role Name
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="c">
                    @item.Name
                </td>
            </tr>
        }
    </table>
    <div>
        @Html.ActionLink("Cancel", "Index", "Home")
    </div>
</div>
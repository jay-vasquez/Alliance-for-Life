@model PagedList.IPagedList<Alliance_for_Life.Models.ResidentialMIR>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Monthly Service Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    @if (!User.IsInRole("Admin"))
    {
        <h2>@ViewBag.Title's for @ViewBag.Subcontractor</h2>
        <br />
        <form>
            @using (Html.BeginForm(FormMethod.Post))
            {
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-5th-1 col-sm-3" style="align-content:center;">
                            Search By Year: @Html.DropDownList("Year", null, "Select Year", htmlAttributes: new { @class = "form-control", onchange = "this.form.submit()" })
                        </div>
                        <div class="col-xs-5th-1 col-sm-3" style="align-content:center;">
                            Search By Month: @Html.DropDownList("Month", null, "Select Month", htmlAttributes: new { @class = "form-control", onchange = "this.form.submit()" })
                        </div>
                    </div>
                </div>
            }
        </form>
    }
    else
    {
        <h2>@ViewBag.Title</h2>
        <form>
            @using (Html.BeginForm(FormMethod.Post))
            {
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-5th-1 col-sm-3" style="align-content:center;">
                            Search By Organization: @Html.DropDownList("searchString", (IEnumerable<SelectListItem>)ViewBag.Subcontractor, "", htmlAttributes: new { @class = "form-control", onchange = "this.form.submit()" })
                        </div>
                        <div class="col-xs-5th-1 col-sm-3" style="align-content:center;">
                            Search By Year: @Html.DropDownList("Year", null, "Select Year", htmlAttributes: new { @class = "form-control", onchange = "this.form.submit()" })
                        </div>
                        <div class="col-xs-5th-1 col-sm-3" style="align-content:center;">
                            Search By Month: @Html.DropDownList("Month", null, "Select Month", htmlAttributes: new { @class = "form-control", onchange = "this.form.submit()" })
                        </div>
                    </div>
                </div>
            }
        </form>
    }


    <h3>Residental </h3>

    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" style="font-size:16px" cellspacing="0" width="100">
        <thead>
            <tr style="font-size:13px; text-align:center;background-color:#c3e1f7;">
                <th class="th-sm">
                    @Html.ActionLink("Organization", "Index", new { sortOrder = ViewBag.NameSortParm })
                </th>
                <th class="th-sm">
                    Month
                </th>
                <th>
                    Year
                </th>
                <th class="th-sm">
                    Client Bed Nights
                </th>
                <th class="th-sm">
                    A2A Enrollment
                </th>
                <th class="th-sm">
                    Total A2A Bed Nights
                </th>
                <th class="th-sm">
                    Monthly A2A Clients Served
                </th>
                <th class="th-sm">
                    Total Clients Served
                </th>
                <th class="th-sm">
                    Job or Educational Services
                </th>
                <th class="th-sm">
                    Participating Fathers
                </th>
                <th class="th-sm">
                    Prenatal & Parenting Classes Offered
                </th>
                <th class="th-sm">
                    Prenatal & Parenting Classes Attended
                </th>
                <th class="th-sm">
                    Case Management Hours
                </th>
                <th class="th-sm">
                    Participants in Case Management
                </th>
                <th class="th-sm">
                    Other Classes Offered
                </th>
                <th class="th-sm">
                    Details
                </th>
                @if (!User.IsInRole("Admin"))
                {
                    <th class="th-sm">
                        Edit
                    </th>
                }

        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subcontractor.OrgName)
                </td>
                <td>
                    @item.Month
                </td>
                <td>
                    @item.Year
                </td>
                <td>
                    @item.TotBedNights.ToString("#,##0")
                </td>
                <td>
                    @item.TotA2AEnrollment.ToString("#,##0")
                </td>
                <td>
                    @item.TotA2ABedNights.ToString("#,##0")
                </td>
                <td>
                    @item.MA2Apercent.ToString("#,##0")
                </td>
                <td>
                    @item.TotOverallServed.ToString("#,##0")
                </td>
                <td>
                    @item.ClientsJobEduServ.ToString("#,##0")
                </td>
                <td>
                    @item.ParticipatingFathers.ToString("#,##0")
                </td>
                <td>
                    @item.TotEduClasses.ToString("#,##0")
                </td>
                <td>
                    @item.TotClientsinEduClasses.ToString("#,##0")
                </td>
                <td>
                    @item.TotCaseHrs.ToString("#,##0")
                </td>
                <td>
                    @item.TotClientsCaseHrs.ToString("#,##0")
                </td>
                <td>
                    @item.TotOtherClasses.ToString("#,##0")
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
                @if (!User.IsInRole("Admin"))
                {
                    <td>
                        <a href="@Url.Action("Edit", "ResidentialMIRs", new { id = item.Id }, Request.Url.Scheme)">
                            <i style="font-size:16px; color:#3498DB" class="fa">&#xf044;</i>
                        </a>
                    </td>
                }

            </tr>
        }
    </table>

    <p>
        <h3>Non Residental </h3>
    </p>

    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" style="font-size:16px" cellspacing="0" width="100">
        <thead>
            <tr style="font-size:13px; text-align:center;background-color:#c3e1f7;">
                <th class="th-sm">
                    @Html.ActionLink("Organization", "Index", new { sortOrder = ViewBag.NameSortParm })
                </th>
                <th class="th-sm">
                    Month
                </th>
                <th>
                    Year
                </th>
                <th class="th-sm">
                    A2A Enrollment
                </th>
                <th class="th-sm">
                    Monthly A2A Clients
                </th>
                <th class="th-sm">
                    Total Clients Served
                </th>
                <th class="th-sm">
                    Jobs or Education
                </th>
                <th class="th-sm">
                    Enrolled Fathers
                </th>
                <th class="th-sm">
                    Parenting Classes Offered
                </th>
                <th class="th-sm">
                    Parenting Classes Attended
                </th>
                <th class="th-sm">
                    Management Hours
                </th>
                <th class="th-sm">
                    Participants in Case Management
                </th>
                <th class="th-sm">
                    Other Classes
                </th>
                <th class="th-sm">
                    Details
                </th>
                @if (!User.IsInRole("Admin"))
                {
                    <th class="th-sm">
                        Edit
                    </th>
                }
        </thead>

        @foreach (var items in ViewBag.nonResidentialMIRs)
        {
            <tr>
                <td>
                    @items.Subcontractor.OrgName
                </td>
                <td>
                    @items.Months
                </td>
                <td>
                    @items.Year
                </td>
                <td>
                    @items.TotA2AEnrollment.ToString("#,##0")
                </td>
                <td>
                    @items.MA2Apercent.ToString("#,##0")
                </td>
                <td>
                    @items.TotOverallServed.ToString("#,##0")
                </td>
                <td>
                    @items.ClientsJobEduServ.ToString("#,##0")
                </td>
                <td>
                    @items.ParticipatingFathers.ToString("#,##0")
                </td>
                <td>
                    @items.TotEduClasses.ToString("#,##0")
                </td>
                <td>
                    @items.TotClientsinEduClasses.ToString("#,##0")
                </td>
                <td>
                    @items.TotCaseHrs.ToString("#,##0")
                </td>
                <td>
                    @items.TotClientsCaseHrs.ToString("#,##0")
                </td>
                <td>
                    @items.TotOtherClasses.ToString("#,##0")
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = items.Id })
                </td>
                @if (!User.IsInRole("Admin"))
                {
                    <td>
                        <a href="@Url.Action("Edit", "NonResidentialMIRs", new { id = items.Id }, Request.Url.Scheme)">
                            <i style="font-size:16px; color:#3498DB" class="fa">&#xf044;</i>
                        </a>
                    </td>
                }
            </tr>
        }
    </table>
    <div class="container-fluid">
        <form>
            @using (Html.BeginForm())
            {
                <br />
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-2">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                            @Html.PagedListPager(Model, page => Url.Action("Index",
                            new { page, pgSize = ViewBag.psize, @class = "pagination"}))       
                        </div>
                        <div class="col-sm-2">
                            Results per Page:
                            @Html.DropDownList("pgSize", (IEnumerable<SelectListItem>)ViewBag.PageSize, "", htmlAttributes: new { @class = "form-control"})
                        </div>
                    </div>
                </div>
            }
        </form>
    </div>
</div>
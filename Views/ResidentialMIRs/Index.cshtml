@model PagedList.IPagedList<Alliance_for_Life.Models.ResidentialMIR>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Monthly Service Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    @using (Html.BeginForm())
    {
        <p>
            Find by Organization Name: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>

    }

    <p>
        <h3>Residental </h3>
    </p>
    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100">
        <thead>
            <tr style="font-size:16px">
                <th class="th-sm">
                    @Html.ActionLink("Organization", "Index", new { sortOrder = ViewBag.NameSortParm })

                </th>
                <th class="th-sm">
                    Month
                </th>

                <th class="th-sm">
                    @Html.ActionLink("Submitted Date", "Index", new { sortOrder = ViewBag.DateSortParm })

                </th>
                <th class="th-sm">
                    Bed Nights

                </th>
                <th class="th-sm">
                    A2A Enrollment

                </th>
                <th class="th-sm">
                    A2A Bed Nights

                </th>
                <th class="th-sm">
                    Monthly A2A Clients

                </th>
                <th class="th-sm">
                    Jobs or Education
                </th>
                <th class="th-sm">
                    Enrolled Fathers
                </th>
                <th class="th-sm">
                    Parenting Classes Offered
                </th>
                <th class="th-sm">
                    Parenting Classes Attended
                </th>
                <th class="th-sm">
                    Management Hours
                </th>
                <th class="th-sm">
                    Participants in Case Management
                </th>
                <th class="th-sm">
                    Other Classes
                </th>
                <th class="th-sm">
                    Details
                </th>
                <th class="th-sm">
                    Edit
                </th>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subcontractor.OrgName)

                </td>
                <td>
                    @item.Month
                </td>
                <td>
                    @item.SubmittedDate.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotBedNights)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotA2AEnrollment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotA2ABedNights)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MA2Apercent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientsJobEduServ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParticipatingFathers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotEduClasses)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotClientsinEduClasses)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotCaseHrs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotClientsCaseHrs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotOtherClasses)
                </td>

                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
                <td>
                    <a href="@Url.Action("Edit", "ResidentialMIRs", new { id = item.Id }, Request.Url.Scheme)">
                        <i style="font-size:16px; color:#3498DB" class="fa">&#xf044;</i>
                    </a>
                </td>
            </tr>
        }
    </table>

    <p>
        <h3>Non Residental </h3>
    </p>

    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100">
        <thead>
            <tr style="font-size:16px">
                <th class="th-sm">
                    @Html.ActionLink("Organization", "Index", new { sortOrder = ViewBag.NameSortParm })

                </th>
                <th class="th-sm">
                    Month
                </th>
                <th class="th-sm">
                    Year
                </th>
                <th class="th-sm">
                    @Html.ActionLink("Submitted Date", "Index", new { sortOrder = ViewBag.DateSortParm })

                </th>
                <th class="th-sm">
                    TotA2AEnrollment
                </th>

                <th class="th-sm">
                    MA2Apercent

                </th>

                <th class="th-sm">
                    ClientsJobEduServ

                </th>
                <th class="th-sm">
                    ParticipatingFathers
                </th>
                <th class="th-sm">
                    TotEduClasses
                </th>
                <th class="th-sm">
                    TotClientsinEduClasses
                </th>
                <th class="th-sm">
                    TotCaseHrs
                </th>
                <th class="th-sm">
                    TotClientsCaseHrs
                </th>
                <th class="th-sm">
                    TotOtherClasses
                </th>

                <th class="th-sm">
                    TotOverallServed
                </th>
                <th>

                </th>

        </thead>

        @foreach (var items in ViewBag.nonResidentialMIRs)
        {
    <tr>
        <td>
            @items.Subcontractor.OrgName
        </td>
        <td>
            @items.Month
        </td>
        <td>
            @items.Year
        </td>
        <td>
            @items.SubmittedDate
        </td>
        <td>
            @items.TotA2AEnrollment
        </td>
        <td>
            @items.MA2Apercent
        </td>
        <td>
            @items.ClientsJobEduServ
        </td>
        <td>
            @items.ParticipatingFathers
        </td>
        <td>
            @items.TotEduClasses
        </td>
        <td>
            @items.TotClientsinEduClasses
        </td>
        <td>
            @items.TotCaseHrs
        </td>
        <td>
            @items.TotClientsCaseHrs
        </td>
        <td>
            @items.TotOtherClasses
        </td>

        <td>
            @items.TotOverallServed
        </td>
        <td>
            <a href="@Url.Action("Details", "NonResidentialMIRs", new { id = items.Id }, Request.Url.Scheme)">
                <i style="font-size:16px; color:green" class="fa">&#xf06e;</i>
            </a> |
            <a href="@Url.Action("Edit", "NonResidentialMIRs", new { id = items.Id }, Request.Url.Scheme)">
                <i style="font-size:16px; color:#3498DB" class="fa">&#xf044;</i>
            </a>
        </td>
       
    </tr>
        }
    </table>

    <p>
        Select Number Shown Per Page:
        @Html.DropDownList("pgSize", new SelectList(new[] { 10, 20, 30, 40, 50 }), htmlAttributes: new { @class = "", onchange = "this.form.submit()" })
    </p>

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, @class = "pagination" }))
</div>
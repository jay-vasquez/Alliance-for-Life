@model Alliance_for_Life.Models.ResidentialMIR

@{
    ViewBag.Title = "Details for Residential Monthly Service Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl >
        <dt class="col-md-3">
            @Html.DisplayNameFor(model => model.Subcontractor.OrgName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subcontractor.OrgName)
        </dd>

        <dt class="col-md-3">
            Date form was submitted
        </dt>

        <dd>
            @Model.SubmittedDate.ToShortDateString()
        </dd>

        <dt class="col-md-3">
            @Html.DisplayNameFor(model => model.Month)
        </dt>

        <dd>
            @Model.Month
        </dd>

        <dt class="col-md-3">
            @Html.DisplayNameFor(model => model.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt class="col-md-3">
            Client Bed Nights
        </dt>

        <dd>
            @Model.TotBedNights.ToString("#,##0")
        </dd>

        <dt class="col-md-3">
            A2A Enrollment
        </dt>

        <dd>
            @Model.TotA2AEnrollment.ToString("#,##0")
        </dd>

        <dt class="col-md-3">
            Total A2A Bed Nights
        </dt>

        <dd>
            @Model.TotA2ABedNights.ToString("#,##0")
        </dd>

        <dt class="col-md-3">
            Monthly A2A Clients Served
        </dt>

        <dd>
            @Model.MA2Apercent.ToString("#,##0")
        </dd>

        <dt class="col-md-3">
            Total Clients Served
        </dt>

        <dd>
            @Model.TotOverallServed.ToString("#,##0")
        </dd>

        <dt class="col-md-3">
            Job or Educational Services
        </dt>

        <dd>
            @Model.ClientsJobEduServ.ToString("#,##0")
        </dd>

        <dt class="col-md-3">
            Participating Fathers
        </dt>

        <dd>
            @Model.ParticipatingFathers.ToString("#,##0")
        </dd>

        <dt class="col-md-3">
            Prenatal & Parenting Classes Offered
        </dt>

        <dd>
            @Model.TotEduClasses.ToString("#,##0")
        </dd>

        <dt class="col-md-3">
            Prenatal & Parenting Classes Attended
        </dt>

        <dd>
            @Model.TotClientsinEduClasses.ToString("#,##0")
        </dd>

        <dt class="col-md-3">
            Case Management Hours
        </dt>

        <dd>
            @Model.TotCaseHrs.ToString("#,##0")
        </dd>

        <dt class="col-md-3">
            Participants in Case Management
        </dt>

        <dd>
            @Model.TotClientsCaseHrs.ToString("#,##0")
        </dd>

        <dt class="col-md-3">
            Other Classes Offered
        </dt>

        <dd>
            @Model.TotOtherClasses.ToString("#,##0")
        </dd>
    </dl>
</div>
<p>
    @if (!User.IsInRole("Admin"))
    {
        @Html.ActionLink("Delete |", "Delete", new { id = Model.Id });
    }
    @Html.ActionLink("Back to List", "Index")
</p>
<br />

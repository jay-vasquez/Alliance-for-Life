@model IEnumerable<Alliance_for_Life.Models.NonResidentialMIR>

@{
    ViewBag.Title = "Non-Residential MIR Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Non-Residential MIR Reports</h2>

<p>
    Find by Organization Name or Submitted Date: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
</p>

<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100">
    <thead>
        <tr style="font-size:16px">
            <th class="th-sm">
                @Html.ActionLink("Organization", "Index", new { sortOrder = ViewBag.NameSortParm })

            </th>
            <th class="th-sm">
                Month
            </th>

            <th class="th-sm">
                @Html.ActionLink("Submitted Date", "Index", new { sortOrder = ViewBag.DateSortParm })

            </th>
            <th class="th-sm">
                Client Bed Nights

            </th>
            <th class="th-sm">
                A2A Enrollment

            </th>
            <th class="th-sm">
                Total A2A Bed Nights

            </th>
            <th class="th-sm">
                Monthly A2A Clients Served

            </th>
            <th class="th-sm">
                Job or Educational Services
            </th>
            <th class="th-sm">
                Participating Fathers
            </th>
            <th class="th-sm">
                Prenatal & Parenting Classes Offered
            </th>
            <th class="th-sm">
                Prenatal & Parenting Classes Attended
            </th>
            <th class="th-sm">
                Case Management Hours
            </th>
            <th class="th-sm">
                Participants in Case Management
            </th>
            <th class="th-sm">
                Other Classes Offered
            </th>
            <th class="th-sm">
                Details
            </th>
            <th class="th-sm">
                Edit
            </th>
</thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subcontractor.OrgName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Months)
                </td>
                <td>
                    @item.SubmittedDate.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotBedNights)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotA2AEnrollment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotA2ABedNights)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MA2Apercent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientsJobEduServ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParticipatingFathers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotEduClasses)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotClientsinEduClasses)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotCaseHrs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotClientsCaseHrs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotOtherClasses)
                </td>

                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
                <td>
                    <a href="@Url.Action("Edit", "NonResidentialMIRs", new { id = item.Id }, Request.Url.Scheme)">
                        <i style="font-size:16px; color:#3498DB" class="fa">&#xf044;</i>
                    </a>
                </td>
            </tr>
        }

    </table>

@model Alliance_for_Life.ViewModels.ClientListFormViewModel

@{
                /**/

                ViewBag.Title = Model.Heading;
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm(Model.Action, "ClientList"))
{
    <p class="alert alert-info">All fields are <strong>required</strong>.</p>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.HiddenFor(m => m.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SubcontractorId)
        @Html.DropDownListFor(m => m.SubcontractorId, new SelectList(Model.Subcontractors, "SubcontractorId", "OrgName"), new { @class = "form-control", id = "SubcontractorId" })
        @Html.ValidationMessageFor(m => m.SubcontractorId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DOB)
        @if (Model.Action == "Create")
        {
            @Html.TextBoxFor(m => m.DOB, new { @class = "form-control ", type = "date", placeholder = "eg 12/18/2018" })
        }
        else
        {
            @Html.TextBoxFor(m => m.DOB, "{0:MM/dd/yyyy}", new { @class = "form-control " })
        }
        @Html.ValidationMessageFor(m => m.DOB)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DueDate)
        @if (Model.Action == "Create")
        {
            @Html.TextBoxFor(m => m.DueDate, new { @class = "form-control ", type = "date", placeholder = "eg 12/18/2018" })
        }
        else
        {
            @Html.TextBoxFor(m => m.DueDate, "{0:MM/dd/yyyy}", new { @class = "form-control " })
        }
        @Html.ValidationMessageFor(m => m.DueDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Active)
        @Html.RadioButtonFor(m => m.Active, "True", new { @class = "form-group", @checked="checked"})Yes.
        @Html.RadioButtonFor(m => m.Active,  new { @class = "form-group" })No.
    </div>
    <button type="submit" class="btn btn-group-sm btn-primary">Submit</button>
    <br />
    <br />
    <div>
        @Html.ActionLink("To Report Page", "Reports")|
        @Html.ActionLink("Cancel", "Index", "Home")
    </div>
}
@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval")


}



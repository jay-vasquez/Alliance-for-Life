@model IEnumerable<Alliance_for_Life.Models.ClientList>
@{
    ViewBag.Title = "All Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Current Active Clients</h2>

    <ul class="client">
        @foreach (var activeclients in Model)
        {
            <li class="col-sm-3">
                <div class="details">
                    <div class="clientid">@activeclients.Id</div>
                    <div class="orgname">@activeclients.Subcontractor</div>
                    <div class="fname">@activeclients.FirstName</div>
                    <div class="lname">@activeclients.LastName</div>
                    <div class="dob">@activeclients.DOB.ToShortDateString()</div>
                    <div class="due">@activeclients.DueDate.ToShortDateString()</div>
                </div>
                <div class="actions">
                    <a href="@Url.Action("Edit", "ClientList", new { id = activeclients.Id })">Edit</a>
                </div>
            </li>
        }
    </ul>
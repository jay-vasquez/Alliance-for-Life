@model PagedList.IPagedList<Alliance_for_Life.Models.ClientList>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Not Active Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Non-Active Clients</h2>
    <form>
        @using (Html.BeginForm(FormMethod.Post))
        {
            <br />
            <div class="container">
                <div class="row">
                    <div class="col-xs-5th-1 col-sm-3" style="align-content:center;">
                        Search By Organization: @Html.DropDownList("searchString", (IEnumerable<SelectListItem>)ViewBag.Subcontractor, "", htmlAttributes: new { @class = "form-control", onchange = "this.form.submit()" })
                    </div>
                    <div class="col-xs-5th-1 col-sm-3" style="align-content:center;">
                        Results per Page: @Html.DropDownList("pgSize", new SelectList(new[] { 10, 20, 30, 40, 50 }), htmlAttributes: new { @class = "form-control", onchange = "this.form.submit()" })
                    </div>
                </div>
            </div>
            <br />
        }
    </form>

    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100">
        <tr>
            <th>
                @Html.ActionLink("Organization", "AllNonActiveClients", new { sortOrder = ViewBag.NameSortParm })
            </th>

            <th>
                First Name
            </th>
            <th>
                @Html.ActionLink("Last Name", "AllNonActiveClients", new { sortOrder = ViewBag.LastNameSortParm })
            </th>
            <th>
                @Html.ActionLink("Due date", "AllNonActiveClients", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                Birthday
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="clientid">@item.Subcontractor.OrgName</div>
                </td>

                <td>
                    <div class="fname">@item.FirstName</div>
                </td>

                <td>
                    <div class="lname">@item.LastName</div>
                </td>

                <td>
                    <div class="due">@item.DueDate.ToShortDateString()</div>
                </td>

                <td>
                    <div class="due">@item.DOB.ToShortDateString()</div>
                </td>
            </tr>
        }
        <tr></tr>
    </table>

    <h3>Total Active Clients @Model.Count()</h3>

    <p>
        Select Number Shown Per Page:
        @Html.DropDownList("pgSize", new SelectList(new[] { 10, 20, 30, 40, 50 }), htmlAttributes: new { @class = "", onchange = "this.form.submit()" })
    </p>

    @using (Html.BeginForm("ExportAllNonActive", "ClientList", FormMethod.Post))
    {
        <input type="submit" value="Export to Excel" class="btn btn-primary" />
    }
    <br />

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, @class="pagination" }))
</div>

@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Residential MIR Reports</h2>

<table class="table">
    <tr>
        <th>
            Report Id
        </th>

        <th>
            Organization
        </th>

        <th>
            Month
        </th>

        <th>
            Client Bed Nights
        </th>

        <th>
            A2A Enrollment
        </th>

        <th>
            Total A2A Bed Nights
        </th>

        <th>
            Monthly A2A Clients Served
        </th>

        <th>
            Job or Educational Services
        </th>

        <th>
            Participating Fathers
        </th>

        <th>
            Prenatal & Parenting Classes Offered
        </th>

        <th>
            Prenatal & Parenting Classes Attended
        </th>

        <th>
            Case Management Hours
        </th>

        <th>
            Participants in Case Management
        </th>
        <th>
            Other Classes Offered
        </th>
        <th></th>
    </tr>
    @foreach (var report in Model)
    {
        <tr>
            <td>
                <div class="clientid">@report.Id</div>
            </td>

            <td>
                <div class="clientid">@report.OrgName</div>
            </td>

            <td>
                <div class="fname">@report.Month</div>
            </td>

            <td>
                <div class="lname">@report.TotBedNights</div>
            </td>

            <td>
                <div class="due">@report.TotA2AEnrollment</div>
            </td>

            <td>
                <div class="due">@report.TotA2ABedNights</div>
            </td>

            <td>
                <div class="clientid">@report.MA2Apercent</div>
            </td>

            <td>
                <div class="clientid">@report.ClientsJobEduServ</div>
            </td>

            <td>
                <div class="clientid">@report.ParticipatingFathers</div>
            </td>

            <td>
                <div class="clientid">@report.TotEduClasses</div>
            </td>

            <td>
                <div class="fname">@report.TotClientsinEduClasses</div>
            </td>

            <td>
                <div class="lname">@report.TotCaseHrs</div>
            </td>

            <td>
                <div class="due">@report.TotClientsCaseHrs</div>
            </td>

            <td>
                <div class="due">@report.TotOtherClasses</div>
            </td>
        </tr>
    }
    <tr></tr>
</table>

<br />
@using (Html.BeginForm("Export", "ResidentialMIR", FormMethod.Post))
{
    <input type="submit" value="Export to Excel" class="btn btn-primary" />
}


        <dd>
            @Model.PTotals.ToString("C")
        </dd>

    </dl>
</div>
<p>
    @if (!User.IsInRole("Admin"))
    {
        @Html.ActionLink("Delete |", "Delete", new { id = Model.PSId });
    }
    @Html.ActionLink("Back to List", "Index")
</p>

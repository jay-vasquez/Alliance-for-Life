    @*This is how you do a Sum in Linq to apply a total based on a model property*@
    <h3>Total Administrative Cost</h3>
    <p>
            @ViewBag.Admintotal.ToString("c")
    </p>
    <br /><br />
    @using (Html.BeginForm("Export", "ParticipationCost", FormMethod.Post))
    {
        <input type="submit" value="Export to Excel" class="btn btn-group-sm btn-primary" />
    }
    <div class="container-fluid">
        <form>
            @using (Html.BeginForm())
            {
                <br />
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-2">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                            @Html.PagedListPager(Model, page => Url.Action("TotalCostReport",
                                new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, @class = "pagination" }))
                        </div>
                        <div class="col-sm-2">
                            Select Page:
                            @Html.DropDownList("pgSize", new SelectList(new[] { 10, 20, 30, 40, 50 }), htmlAttributes: new { @class = "", onchange = "this.form.submit()" })
                        </div>
                    </div>
                </div>
            }
        </form>
    </div>
</div>